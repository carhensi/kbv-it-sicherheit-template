% Praxis-Signatur (falls Signatur-Datei vorhanden)
\newcommand{\praxissignatur}{%
\AccessibleSwitch{
  % Accessible: Einfache Struktur ohne minipage
  \vspace{1cm}
  \noindent
  \Label{Ort, Datum} \SignatureLine\\[0.5cm]
  \Label{Unterschrift} \SignatureLine\\[0.3cm]
  {\small \PraxisInhaberin\\(Praxisinhaberin)}
}{
  % Standard: Professionelle zwei-Spalten Layout
  \vspace{1cm}
  \noindent
  \begin{minipage}[t]{5cm}
    \centering
    \rule{4cm}{0.3pt} \\[0.3cm]
    {\small Ort, Datum}
  \end{minipage}
  \hfill
  \begin{minipage}[t]{5cm}
    \centering
    \rule{4cm}{0.3pt} \\[0.3cm]
    {\small \PraxisInhaberin \\
    (Praxisinhaberin)}
  \end{minipage}
}
}

